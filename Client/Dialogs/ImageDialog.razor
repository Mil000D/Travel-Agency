<EditForm Model="_imageDTO" OnValidSubmit="Submit">
<DataAnnotationsValidator />
    <MudDialog>
        <DialogContent>
            <MudTextField For="@(() => _imageDTO.ImageURL)" @bind-Value="_imageDTO.ImageURL" Label="Image URL" FullWidth="true" Required="true" />
        </DialogContent>
        <DialogActions>
            <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary">Submit</MudButton>
            <MudButton Variant="Variant.Outlined" OnClick="Cancel">Cancel</MudButton>
        </DialogActions>
    </MudDialog>
</EditForm>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;

    private ImageDTO _imageDTO = new ImageDTO();

    private void Submit()
    {
        MudDialog.Close(DialogResult.Ok(_imageDTO.ImageURL));
    }

    private void Cancel()
    {
        MudDialog.Close(DialogResult.Cancel());
    }
}
